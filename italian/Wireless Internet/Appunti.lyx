\begin_layout Itemize

\series bold
Regola di assegnamento degli indirizzi
\series default
:
\end_layout

\begin_deeper
\begin_layout Itemize
L'intervallo di indirizzamento 
\begin_inset Formula $A\left(d\right)$
\end_inset

 degli indirizzi assegnati ai nodi router (per se stessi e per i figli)
 ad una profondità 
\begin_inset Formula $d<L_{m}$
\end_inset

 è definita da:
\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula 
\[
A\left(d\right)=\begin{cases}
1+D_{m}+R_{m} & \text{per}\: d=L_{m}-1\\
1+D_{m}+R_{m}\cdot A\left(d+1\right) & \text{per}\:0\leq d\leq L_{m}-1
\end{cases}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
I nodi a profondità 
\begin_inset Formula $L_{m}$
\end_inset

 e gli 
\emph on
end-device
\emph default
 hanno assegnati un unico indirizzo.
\end_layout

\begin_layout Itemize
La semplice regola di assegnamento è:
\end_layout

\begin_deeper
\begin_layout Itemize
Ad un nodo di livello 
\begin_inset Formula $d$
\end_inset

 è assegnato un indirizzo nell'intevallo 
\begin_inset Formula $\left[x,\, x+A\left(d\right)-1\right]$
\end_inset


\end_layout

\begin_layout Itemize
Si assegnerà 
\begin_inset Formula $\left[x+\left(i-1\right)\cdot A\left(d+1\right)+1,\, x+i\cdot A\left(d+1\right)\right]$
\end_inset

 all'
\emph on
i-esimo 
\emph default
router figlio (
\begin_inset Formula $i\leq R_{m}$
\end_inset

)
\end_layout

\begin_layout Itemize
Si assegnerà 
\begin_inset Formula $x+R_{m}\cdot A\left(d+1\right)+j$
\end_inset

 al 
\emph on
j-esimo
\emph default
 
\emph on
end-device
\emph default
 figlio del router (
\begin_inset Formula $1\leq j\leq D_{m}$
\end_inset

)
\end_layout

\end_deeper
\end_deeper
